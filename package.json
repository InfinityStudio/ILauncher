{
    "name": "voxelauncher",
    "productName": "VoxeLauncher",
    "version": "0.0.2-beta.0",
    "author": "cijhn@hotmail.com",
    "description": "A great minecraft launcher in the feature",
    "license": "MIT",
    "main": "./dist/electron/main.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/ci010/VoxeLauncher.git"
    },
    "scripts": {
        "build": "node scripts/build.js && electron-builder",
        "build:dir": "node scripts/build.js && electron-builder --dir",
        "build:clean": "cross-env BUILD_TARGET=clean node scripts/build.js",
        "build:locale": "node scripts/build-locale.js",
        "dev": "node scripts/dev-runner.js --no-lazy",
        "pack": "npm run pack:main && npm run pack:renderer",
        "pack:main": "cross-env NODE_ENV=production webpack --progress --colors --config scripts/webpack.main.config.js",
        "pack:renderer": "cross-env NODE_ENV=production webpack --progress --colors --config scripts/webpack.renderer.config.js",
        "lint": "eslint --ext .js,.vue src",
        "lint:fix": "eslint --ext .js,.vue --fix src",
        "test": "mocha test/e2e",
        "release": "standard-version",
        "install:native": "cross-env npm_config_runtime=electron electron-builder install-app-deps",
        "postinstall": "npm run install:native"
    },
    "build": {
        "productName": "voxelauncher",
        "appId": "ci010.voxelauncher",
        "directories": {
            "output": "build"
        },
        "publish": [
            {
                "provider": "github",
                "owner": "ci010",
                "repo": "VoxeLauncher"
            }
        ],
        "files": [
            "dist/electron/**/*"
        ],
        "dmg": {
            "contents": [
                {
                    "x": 410,
                    "y": 150,
                    "type": "link",
                    "path": "/Applications"
                },
                {
                    "x": 130,
                    "y": 150,
                    "type": "file"
                }
            ]
        },
        "mac": {
            "icon": "build/icons/icon.icns"
        },
        "win": {
            "icon": "build/icons/icon.ico",
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                },
                {
                    "target": "zip",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                },
                {
                    "target": "portable",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                }
            ]
        },
        "linux": {
            "icon": "build/icons"
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "dependencies": {
        "electron-updater": "^4.0.6",
        "fast-html-parser": "^1.0.1",
        "file-type": "^12.0.1",
        "got": "^9.6.0",
        "iconv-lite": "^0.5.0",
        "in-gfw": "^1.2.0",
        "lzma-native": "^4.0.5",
        "treelike-task": "^0.0.16",
        "ts-minecraft": "^5.2.6",
        "uuid": "^3.2.1",
        "vue": "^2.6.10",
        "vue-electron": "^1.0.6",
        "vue-i18n": "^8.12.0",
        "vue-router": "^3.0.6",
        "vuetify": "^1.5.14",
        "vuex": "^3.0.1",
        "yauzlw": "^0.0.7",
        "yazl": "^2.5.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.0.0",
        "@commitlint/config-conventional": "^8.0.0",
        "babel-eslint": "^10.0.1",
        "cfonts": "^2.4.3",
        "chalk": "^2.4.2",
        "copy-webpack-plugin": "^5.0.3",
        "cross-env": "^5.0.5",
        "css-loader": "^3.0.0",
        "del": "^5.0.0",
        "devtron": "^1.4.0",
        "electron": "^5.0.3",
        "electron-builder": "^21.0.15",
        "electron-debug": "^3.0.1",
        "electron-devtools-installer": "^2.2.0",
        "eslint": "^6.0.1",
        "eslint-config-airbnb-base": "^13.1.0",
        "eslint-friendly-formatter": "^4.0.1",
        "eslint-import-resolver-webpack": "^0.11.1",
        "eslint-plugin-html": "^6.0.0",
        "eslint-plugin-import": "^2.14.0",
        "eslint-plugin-vue": "^5.2.2",
        "file-loader": "^4.0.0",
        "html-webpack-plugin": "^3.2.0",
        "husky": "^3.0.0",
        "maven-artifact-version": "0.0.1",
        "mini-css-extract-plugin": "^0.7.0",
        "mocha": "^6.1.4",
        "multispinner": "^0.2.1",
        "require-dir": "^1.2.0",
        "spectron": "^7.0.0",
        "standard-version": "^6.0.1",
        "style-loader": "^0.23.1",
        "three": "^0.106.2",
        "three-orbit-controls": "^82.1.0",
        "url-loader": "^2.0.1",
        "vue-loader": "^15.2.4",
        "vue-particles": "^1.0.9",
        "vue-style-loader": "^4.1.0",
        "vue-template-compiler": "^2.6.10",
        "webpack": "^4.15.1",
        "webpack-cli": "^3.3.1",
        "webpack-dev-server": "^3.2.1",
        "webpack-hot-middleware": "^2.22.2"
    }
}
