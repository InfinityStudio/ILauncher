{
    "name": "voxelauncher",
    "private": true,
    "productName": "VoxeLauncher",
    "version": "0.3.1",
    "author": "ci010 <cijhn@hotmail.com>",
    "description": "A great minecraft launcher in the future",
    "license": "MIT",
    "engines": {
        "node": ">=10.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/voxelum/voxelauncher.git"
    },
    "scripts": {
        "build": "node scripts/build.js",
        "build:clean": "cross-env BUILD_TARGET=clean node scripts/build.js",
        "build:locale": "node scripts/build-locale.js",
        "build:schema": "node scripts/build-schema.js",
        "dev": "node scripts/dev-runner.js --no-lazy",
        "pack": "npm run pack:main && npm run pack:renderer",
        "pack:main": "cross-env NODE_ENV=production webpack --progress --colors --config scripts/webpack.main.config.js",
        "pack:renderer": "cross-env NODE_ENV=production webpack --progress --colors --config scripts/webpack.renderer.config.js",
        "lint": "eslint --ext .js,.vue src",
        "lint:fix": "eslint --ext .js,.vue --fix src",
        "test": "mocha test/e2e",
        "release": "electron-builder",
        "version": "standard-version"
    },
    "build": {
        "productName": "voxelauncher",
        "appId": "voxelum.voxelauncher",
        "directories": {
            "output": "build"
        },
        "publish": [
            {
                "provider": "github",
                "owner": "voxelum",
                "repo": "VoxeLauncher"
            },
            {
                "provider": "custom",
                "providerName": "azure",
                "container": "releases",
                "account": "voxelauncher"
            }
        ],
        "files": [
            "dist/electron/**/*"
        ],
        "dmg": {
            "contents": [
                {
                    "x": 410,
                    "y": 150,
                    "type": "link",
                    "path": "/Applications"
                },
                {
                    "x": 130,
                    "y": 150,
                    "type": "file"
                }
            ]
        },
        "mac": {
            "icon": "build/icons/icon.icns",
            "target": [
                {
                    "target": "zip"
                },
                {
                    "target": "dmg"
                }
            ]
        },
        "win": {
            "icon": "build/icons/icon.ico",
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                },
                {
                    "target": "zip",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                },
                {
                    "target": "portable",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                }
            ]
        },
        "linux": {
            "icon": "build/icons",
            "target": [
                {
                    "target": "deb"
                },
                {
                    "target": "rpm"
                },
                {
                    "target": "AppImage"
                },
                {
                    "target": "snap"
                }
            ]
        },
        "snap": {
            "publish": [
                "github",
                "custom"
            ]
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "dependencies": {
        "7zip-min": "^1.1.1",
        "@vue/composition-api": "^0.3.4",
        "@xmcl/minecraft-launcher-core": "^1.1.1",
        "@xmcl/unzip": "^1.0.3",
        "ajv": "^6.10.2",
        "electron-updater": "^4.0.6",
        "fast-html-parser": "^1.0.1",
        "file-type": "^12.1.0",
        "fs-extra": "^8.1.0",
        "got": "^9.6.0",
        "iconv-lite": "^0.4.18",
        "in-gfw": "^1.2.0",
        "maven-artifact-version": "0.0.1",
        "reflect-metadata": "^0.1.13",
        "uuid": "^3.2.1",
        "vue": "^2.6.10",
        "vue-electron": "^1.0.6",
        "vue-i18n": "^7.0.4",
        "vue-router": "^3.0.6",
        "vuetify": "^1.5.18",
        "vuex": "^3.1.1",
        "yazl": "^2.5.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.1.0",
        "@commitlint/config-conventional": "^8.0.0",
        "@types/7zip-min": "^1.1.0",
        "@types/bytebuffer": "^5.0.40",
        "@types/filenamify": "^2.0.2",
        "@types/fs-extra": "^8.0.1",
        "@types/got": "^9.6.7",
        "@types/jest": "^24.0.23",
        "@types/long": "^4.0.0",
        "@types/lzma-native": "^4.0.0",
        "@types/uuid": "^3.4.5",
        "@types/yazl": "^2.4.1",
        "@typescript-eslint/eslint-plugin": "^2.6.0",
        "@typescript-eslint/parser": "^2.6.0",
        "babel-eslint": "^10.0.1",
        "cfonts": "^1.1.3",
        "chalk": "^1.1.3",
        "copy-webpack-plugin": "^4.5.1",
        "cross-env": "^5.0.5",
        "css-loader": "^2.1.1",
        "del": "^3.0.0",
        "devtron": "^1.4.0",
        "electron": "^7.1.3",
        "electron-builder": "^21.2.0",
        "electron-debug": "^1.5.0",
        "electron-devtools-installer": "^2.2.0",
        "electron-publisher-azure": "0.0.6",
        "eslint": "^5.5.0",
        "eslint-config-airbnb-base": "^13.1.0",
        "eslint-friendly-formatter": "^4.0.1",
        "eslint-import-resolver-webpack": "^0.10.1",
        "eslint-plugin-html": "^4.0.5",
        "eslint-plugin-import": "^2.14.0",
        "eslint-plugin-vue": "^5.2.2",
        "file-loader": "^1.1.11",
        "filenamify": "^4.1.0",
        "html-webpack-plugin": "^3.2.0",
        "husky": "^2.4.1",
        "jest": "^24.9.0",
        "mini-css-extract-plugin": "^0.4.2",
        "mocha": "^5.2.0",
        "multispinner": "^0.2.1",
        "require-dir": "^1.2.0",
        "spectron": "^5.0.0",
        "standard-version": "^6.0.1",
        "style-loader": "^0.21.0",
        "three": "^0.86.0",
        "three-orbit-controls": "^82.1.0",
        "ts-jest": "^24.2.0",
        "ts-loader": "^6.1.0",
        "typescript": "^3.7.2",
        "typescript-json-schema": "^0.40.0",
        "url-loader": "^1.1.2",
        "vue-loader": "^15.2.4",
        "vue-observe-visibility": "^0.4.4",
        "vue-particles": "^1.0.9",
        "vue-style-loader": "^4.1.0",
        "vue-template-compiler": "^2.6.10",
        "webpack": "^4.15.1",
        "webpack-cli": "^3.3.1",
        "webpack-dev-server": "^3.2.1",
        "webpack-hot-middleware": "^2.22.2"
    },
    "jest": {
        "globals": {
            "ts-jest": {
                "tsConfig": "tsconfig.json"
            }
        },
        "moduleFileExtensions": [
            "ts",
            "js",
            "json"
        ],
        "modulePaths": [
            "src"
        ],
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testRegex": "src/.*spec\\.ts",
        "transform": {
            "^.+(?!\\.d)\\.ts$": "ts-jest"
        }
    }
}
