{
    "name": "voxelauncher",
    "private": true,
    "main": "./dist/electron/main.js",
    "productName": "VoxeLauncher",
    "version": "0.3.1",
    "author": "ci010 <cijhn@hotmail.com>",
    "description": "A great minecraft launcher in the future",
    "license": "MIT",
    "engines": {
        "node": ">=10.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/voxelum/voxelauncher.git"
    },
    "scripts": {
        "build": "node scripts/build.js",
        "build:clean": "cross-env BUILD_TARGET=clean node scripts/build.js",
        "build:locale": "node scripts/build-locale.js",
        "build:schema": "node scripts/build-schema.js",
        "dev": "node scripts/dev-runner.js --no-lazy",
        "pack": "npm run pack:main && npm run pack:renderer",
        "pack:main": "cross-env NODE_ENV=production webpack --progress --colors --config scripts/webpack.main.config.js",
        "pack:renderer": "cross-env NODE_ENV=production webpack --progress --colors --config scripts/webpack.renderer.config.js",
        "lint": "eslint --ext .ts,.vue src",
        "lint:fix": "eslint --ext .ts,.vue --fix src",
        "test": "jest",
        "release": "electron-builder"
    },
    "build": {
        "productName": "voxelauncher",
        "appId": "voxelum.voxelauncher",
        "directories": {
            "output": "build"
        },
        "nsis": {
            "perMachine": true,
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "publish": [
            {
                "provider": "github",
                "owner": "voxelum",
                "repo": "VoxeLauncher"
            }
        ],
        "files": [
            "dist/electron/**/*"
        ],
        "dmg": {
            "contents": [
                {
                    "x": 410,
                    "y": 150,
                    "type": "link",
                    "path": "/Applications"
                },
                {
                    "x": 130,
                    "y": 150,
                    "type": "file"
                }
            ]
        },
        "mac": {
            "icon": "build/icons/icon.icns",
            "target": [
                {
                    "target": "zip"
                },
                {
                    "target": "dmg"
                }
            ],
            "files": [
                "dist/electron/**/*",
                "!node_modules/7zip-bin/linux/**",
                "!node_modules/7zip-bin/win/**"
            ]
        },
        "win": {
            "icon": "build/icons/icon.ico",
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                },
                {
                    "target": "zip",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                },
                {
                    "target": "portable",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                }
            ],
            "files": [
                "dist/electron/**/*",
                "!node_modules/7zip-bin/linux/**",
                "!node_modules/7zip-bin/mac/**"
            ]
        },
        "linux": {
            "icon": "build/icons",
            "target": [
                {
                    "target": "deb"
                },
                {
                    "target": "rpm"
                },
                {
                    "target": "AppImage"
                },
                {
                    "target": "snap"
                }
            ],
            "files": [
                "dist/electron/**/*",
                "!node_modules/7zip-bin/win/**",
                "!node_modules/7zip-bin/mac/**"
            ]
        },
        "snap": {
            "publish": [
                "github"
            ]
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "dependencies": {
        "7zip-min": "^1.1.1",
        "@vue/composition-api": "^0.5.0",
        "ajv": "^6.12.0",
        "electron-updater": "^4.2.4",
        "fast-html-parser": "^1.0.1",
        "file-type": "^12.4.2",
        "filenamify": "^4.1.0",
        "fs-extra": "^9.0.0",
        "got": "^10.7.0",
        "iconv-lite": "^0.5.1",
        "jschardet": "^2.1.1",
        "maven-artifact-version": "0.0.1",
        "three": "^0.115.0",
        "three-orbitcontrols": "^2.110.1",
        "uuid": "^7.0.3",
        "vue": "^2.6.11",
        "vue-i18n": "^7.8.1",
        "vue-router": "^3.1.6",
        "vuetify": "^1.5.24",
        "vuex": "^3.1.2",
        "yazl": "^2.5.1",
        "@xmcl/client": "2.0.5",
        "@xmcl/core": "2.2.0",
        "@xmcl/curseforge": "^0.1.1",
        "@xmcl/forge-site-parser": "2.0.4",
        "@xmcl/gamesetting": "2.0.1",
        "@xmcl/installer": "2.8.1",
        "@xmcl/mod-parser": "2.0.6",
        "@xmcl/model": "1.0.12",
        "@xmcl/nbt": "2.0.3",
        "@xmcl/resource-manager": "2.0.1",
        "@xmcl/resourcepack": "1.0.12",
        "@xmcl/server-info": "2.0.3",
        "@xmcl/system": "2.0.0",
        "@xmcl/task": "2.1.7",
        "@xmcl/text-component": "2.1.1",
        "@xmcl/unzip": "1.2.0",
        "@xmcl/user": "2.1.3",
        "@xmcl/world": "1.1.1"
    },
    "devDependencies": {
        "@actions/core": "^1.2.4",
        "@commitlint/cli": "^8.3.5",
        "@commitlint/config-conventional": "^8.3.4",
        "@types/7zip-min": "^1.1.0",
        "@types/bytebuffer": "^5.0.40",
        "@types/fast-html-parser": "^1.0.0",
        "@types/filenamify": "^2.0.2",
        "@types/fs-extra": "^8.1.0",
        "@types/jest": "^24.9.1",
        "@types/long": "^4.0.1",
        "@types/node": "^12.12.29",
        "@types/uuid": "^3.4.8",
        "@types/yazl": "^2.4.2",
        "@typescript-eslint/eslint-plugin": "^2.22.0",
        "@typescript-eslint/parser": "^2.22.0",
        "@vue/devtools": "^5.3.3",
        "cache-loader": "^4.1.0",
        "chalk": "^2.4.2",
        "conventional-changelog": "^3.1.18",
        "conventional-recommended-bump": "^6.0.5",
        "copy-webpack-plugin": "^4.6.0",
        "cross-env": "^5.2.1",
        "css-loader": "^3.4.2",
        "del": "^3.0.0",
        "devtron": "^1.4.0",
        "electron": "^7.1.14",
        "electron-builder": "^21.2.0",
        "electron-debug": "^1.5.0",
        "electron-publisher-azure": "0.0.6",
        "eslint": "^6.8.0",
        "eslint-config-airbnb-base": "^14.0.0",
        "eslint-friendly-formatter": "^4.0.1",
        "eslint-import-resolver-webpack": "^0.12.1",
        "eslint-plugin-html": "^6.0.0",
        "eslint-plugin-import": "^2.20.1",
        "eslint-plugin-vue": "^6.2.1",
        "file-loader": "^5.1.0",
        "fork-ts-checker-webpack-plugin": "^3.1.1",
        "html-webpack-plugin": "^3.2.0",
        "husky": "^4.2.5",
        "jest": "^24.9.0",
        "mini-css-extract-plugin": "^0.8.2",
        "multispinner": "^0.2.1",
        "semver": "^7.3.2",
        "spectron": "^5.0.0",
        "style-loader": "^0.21.0",
        "thread-loader": "^2.1.3",
        "ts-jest": "^24.3.0",
        "ts-loader": "^6.2.1",
        "typescript": "^3.8.3",
        "typescript-json-schema": "^0.40.0",
        "url-loader": "^3.0.0",
        "vue-loader": "^15.9.0",
        "vue-observe-visibility": "^0.4.6",
        "vue-particles": "^1.0.9",
        "vue-style-loader": "^4.1.0",
        "vue-template-compiler": "^2.6.11",
        "vue-virtual-scroll-list": "^1.4.7",
        "webpack": "^4.42.0",
        "webpack-bundle-analyzer": "^3.6.1",
        "webpack-cli": "^3.3.11",
        "webpack-dev-server": "^3.10.3"
    },
    "jest": {
        "globals": {
            "ts-jest": {
                "tsConfig": "tsconfig.json"
            }
        },
        "moduleNameMapper": {
            "^@universal(.*)$": "<rootDir>/src/universal$1",
            "^@main(.*)$": "<rootDir>/src/main$1"
        },
        "moduleFileExtensions": [
            "ts",
            "js",
            "json"
        ],
        "modulePaths": [
            "src"
        ],
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testRegex": "src/.*spec\\.ts",
        "transform": {
            "^.+(?!\\.d)\\.ts$": "ts-jest"
        }
    }
}
