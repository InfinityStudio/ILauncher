{
    "compilerOptions": {
        "strict": true,
        "target": "es2018",
        "baseUrl": ".",
        "sourceMap": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "paths": {
            "@universal/*": [
                "src/universal/*"
            ],
            "@main/*": [
                "src/main/*"
            ],
            "@/*": [
                "src/renderer/*"
            ]
        }
    },
    "include": [
        "types/*",
        "src/**/*"
    ],
    "exclude": ["node_modules"]
}